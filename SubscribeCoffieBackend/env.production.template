# Production Environment Configuration Template
# Copy this file to .env.production and fill in real values
# NEVER commit .env.production to git!

# Supabase Project Configuration
SUPABASE_PROJECT_REF=your-project-ref-here
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres
DB_CONNECTION_POOLER_URL=postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# Authentication Configuration
JWT_SECRET=your-jwt-secret-from-dashboard
SITE_URL=https://app.subscribecoffie.com
REDIRECT_URLS=https://app.subscribecoffie.com/**,com.subscribecoffie.app://**

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_SENDER_EMAIL=noreply@subscribecoffie.com
SMTP_SENDER_NAME=SubscribeCoffie

# SMS Configuration (Optional - for phone auth)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_MESSAGE_SERVICE_SID=your-message-service-sid

# OAuth Configuration (when ready)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_SECRET=your-apple-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_SECRET=your-google-secret

# Payment Provider Configuration (Phase 2.0.1)
# Uncomment when implementing real payments
# STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
# STRIPE_SECRET_KEY=sk_live_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx
# YOOKASSA_SHOP_ID=xxxxx
# YOOKASSA_SECRET_KEY=xxxxx

# Storage Configuration
STORAGE_BUCKET_CAFE_IMAGES=cafe-images
STORAGE_BUCKET_MENU_IMAGES=menu-images
STORAGE_BUCKET_DOCUMENTS=cafe-documents
STORAGE_FILE_SIZE_LIMIT=52428800

# Application Configuration
ENVIRONMENT=production
APP_NAME=SubscribeCoffie
APP_VERSION=1.0.0

# Monitoring & Logging (Optional)
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ENVIRONMENT=production
LOG_LEVEL=info

# Rate Limiting
API_RATE_LIMIT=200
AUTH_RATE_LIMIT_SMS=30
AUTH_RATE_LIMIT_EMAIL=10

# Feature Flags
ENABLE_CAFE_ONBOARDING=true
ENABLE_WALLET_NETWORKS=true
ENABLE_MOCK_PAYMENTS=true
ENABLE_REAL_PAYMENTS=false

# Business Configuration
DEFAULT_CITYPASS_COMMISSION=7.5
DEFAULT_CAFE_WALLET_COMMISSION=4.0
DEFAULT_DIRECT_ORDER_COMMISSION=17.5

# Backup Configuration
BACKUP_RETENTION_DAYS=30
ENABLE_AUTO_BACKUP=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.
