// MARK: - Friend Requests List
struct FriendRequestsListView: View {
    let requests: [FriendInfo]
    let onRespond: (UUID, Bool) -> Void
    
    var body: some View {
        ScrollView {
            if requests.isEmpty {
                EmptyStateView(
                    icon: "envelope.open",
                    title: "Нет запросов",
                    message: "У вас нет новых запросов в друзья"
                )
                .padding()
            } else {
                LazyVStack(spacing: 12) {
                    ForEach(requests) { request in
                        FriendRequestCardView(
                            request: request,
                            onRespond: onRespond
                        )
                        .padding(.horizontal)
                    }
                }
                .padding(.vertical)
            }
        }
    }
}

// MARK: - Friend Request Card
struct FriendRequestCardView: View {
    let request: FriendInfo
    let onRespond: (UUID, Bool) -> Void
    
    @State private var isResponding = false
    
    var body: some View {
        VStack(spacing: 12) {
            HStack(spacing: 12) {
                Circle()
                    .fill(Color.blue.opacity(0.2))
                    .frame(width: 50, height: 50)
                    .overlay(
                        Image(systemName: "person.fill")
                            .foregroundColor(.blue)
                    )
                
                VStack(alignment: .leading, spacing: 4) {
                    Text("Запрос в друзья")
                        .font(.headline)
                    
                    Text(request.createdAt, style: .relative)
                        .font(.caption)
                        .foregroundColor(.secondary)
                }
                
                Spacer()
            }
            
            HStack(spacing: 12) {
                Button {
                    isResponding = true
                    onRespond(request.requestId, false)
                } label: {
                    Text("Отклонить")
                        .fontWeight(.medium)
                        .frame(maxWidth: .infinity)
                        .padding()
                        .background(Color(.systemGray5))
                        .foregroundColor(.primary)
                        .cornerRadius(10)
                }
                .disabled(isResponding)
                
                Button {
                    isResponding = true
                    onRespond(request.requestId, true)
                } label: {
                    Text("Принять")
                        .fontWeight(.medium)
                        .frame(maxWidth: .infinity)
                        .padding()
                        .background(Color.blue)
                        .foregroundColor(.white)
                        .cornerRadius(10)
                }
                .disabled(isResponding)
            }
        }
        .padding()
        .background(Color(.systemGray6))
        .cornerRadius(12)
    }
}

