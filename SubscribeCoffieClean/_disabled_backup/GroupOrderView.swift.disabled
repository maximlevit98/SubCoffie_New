                    title: "Нет друзей",
                    message: "Добавьте друзей, чтобы делиться заказами"
                )
                .padding()
            } else {
                LazyVStack(spacing: 12) {
                    ForEach(friends) { friend in
                        FriendCardView(friend: friend)
                            .padding(.horizontal)
                    }
                }
                .padding(.vertical)
            }
        }
    }
}

